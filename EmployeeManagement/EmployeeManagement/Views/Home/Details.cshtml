@model HomeDetailsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.emp.Name</h1>
            </div>

            <div class="card-body text-center">
                <img src="~/images/download.jpg" />

                <h4>Employee ID : @Model.emp.Id</h4>
                <h4>Email : @Model.emp.Email</h4>
                <h4>Department : @Model.emp.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a class="button_view" asp-controller="home" asp-action="index">Back</a>
                @*<a href="~/home/index" class="button_view">Back</a>*@
            <a href="~/home/edit/@Model.emp.Id" class="button_edit">Edit</a>
                <a href="#" class="button_del">Delete</a>
            </div>
        </div>
    </div>
</div>
