@model EmployeeManagement.ViewModels.EditRoles
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 >List of user in this role</h1>
@if(Model.Users.Any())
{
    foreach (var user in Model.Users)
    {
        <h5>@user</h5>
    }
}
else
{
    <h5>None at the moment</h5>
}
    <a asp-controller="Administration" asp-action="EditUsersInRole"
       asp-route-roleId="@Model.RoleId" class="button_edit">
        Add or remove users from this role
    </a>
